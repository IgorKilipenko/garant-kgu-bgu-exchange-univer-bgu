        НоваяСтрокаПриказа = Объект.Приказы.Добавить();
        ЗаполнитьЗначенияСвойств(НоваяСтрокаПриказа, СтрокаДанныхПриказов);

        НоваяСтрокаПриказа.Организация = ОрганизацияПоУмолчанию;
