        КонецЕсли;

        ЭтоСправочник = ТаблицаДанныхКЗ.Значение[0].Свойство("Код");
        ЭтоДокумент = НЕ ЭтоСправочник И ТаблицаДанныхКЗ.Значение[0].Свойство("Номер") И ТаблицаДанныхКЗ.Значение[0].Свойство("Дата");

        НоваяТаблицаДанных = Неопределено;
